header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/account')
                span= `${user.name.split(' ')[0]}`
                
            img.form__user-photo(src=`img/users/${user.photo}` alt=`Photo of ${user.name}`)
            
        else
            a.nav__el(href='/login') Log in
            a(href='/signUp')
                button.nav__el.nav__el--cta(href='/signUp') Sign up
            
